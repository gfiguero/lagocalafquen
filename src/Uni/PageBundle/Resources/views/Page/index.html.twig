{% extends ':Page:base.html.twig' %}

{% block stylesheet %}
    {% set foto = random(frontpage.frontpagephotos) %}
    {% set image = '/uploads/frontpage_photos/' ~ foto.photopath %}
    <style type="text/css">
    .header-image {
        background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)),url('{{ asset(image) | imagine_filter('page_header') }}');
    }
    </style>
{% endblock %}

{% block header %}
    <header class="intro-header header-image">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>{{ frontpage.frontpagetitle }}</h1>
                        <hr class="small">
                        <span class="subheading">{{ frontpage.frontpagesubtitle }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block javascript %}{% endblock %}

{% block body -%}

    <section id="service">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-12">
                    <h2 class="section-heading">Servicios</h2>
                </div>
                {% for service in services %}
                <div class="col-md-4">
                    <img class="img-circle img-responsive center-block" alt="{{ service.servicetitle }}" src="{{ asset(service.webpath) | imagine_filter('page_service') }}">
                    <h3 class="service-heading">{{ service.servicetitle }}</h3>
                    <p class="text-muted">{{ service.servicecontent|raw }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section id="frontpage" class="bg-gray-lighter">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-12">
                    <h2 class="section-heading">Nuestra Comunidad</h2>
                </div>
                <div class="col-lg-12">
                    <p class="text-muted">{{ frontpage.frontpagemission|raw }}</p>
                    <p class="text-muted">{{ frontpage.frontpagevision|raw }}</p>
                </div>
            </div>
        </div>
    </section>

    <section id="contact">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-12">
                    <h2 class="section-heading">Contacto</h2>
                </div>
                <div class="col-md-12">
                    <p class="text-muted">{{ icon('envelope fa-2x') }}&nbsp;{{ frontpage.frontpageemail }}</p>
                    <p class="text-muted">{{ icon('phone fa-2x') }}&nbsp;{{ frontpage.frontpagephonenumber }}</p>
                </div>
            </div>
        </div>
    </section>

{% endblock %}