{% extends ':Page:base.html.twig' %}

{% block stylesheet %}
    {% set foto = random(frontpage.frontpagephotos) %}
    {% set image = '/uploads/frontpage_photos/' ~ foto.photopath %}
    <style type="text/css">
    .header-image {
        background: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)),url('{{ asset(image) | imagine_filter('page_header') }}');
        background-repeat:no-repeat;
        background-attachment: fixed;
        background-position: center top;
        background-size: auto;
        background-clip: border-box;
    }
    </style>
{% endblock %}

{% block header %}
    <header class="intro-header header-image">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>{{ "member_index"|trans }}</h1>
                        <hr class="small">
                        <span class="subheading">{{ frontpage.frontpagetitle }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block javascript %}{% endblock %}

{% block body -%}
    <section id="member">
        <div class="container">
            <div class="row text-center">
                {% for member in members %}
                <div class="col-xs-12 col-sm-3 col-lg-2">
                    <div class="thumbnail row-no-padding">
                        <div class="member-photo col-xs-6 col-sm-12">
                            <img class="img-rounded img-responsive" alt="{{ member.memberfirstname }}" src="{{ asset(member.webpath) | imagine_filter('page_member') }}">
                        </div>
                        <div class="member-caption col-xs-6 col-sm-12">
                            <h3>{{ member.memberfirstname ~ ' ' ~ member.memberlastname }}</h3>
                            <p>{% if member.memberrole %}{{ member.memberrole.rolename }}{% endif %}</p>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}